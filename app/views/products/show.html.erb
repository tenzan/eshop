<% title(@product.name)%>

<h1><%= @product.name %></h1>

<%= link_to 'Edit Product', edit_product_path(@product) %>
<%= link_to 'Delete Product',
    product_path(@product), 
    method: :delete,
    data: { confirm: "Are you sure you want to delete this product>"}
%>

<p><%= @product.description %></p>
<p><%= @product.price %></p>
