<% title(@product.name)%>

<header>
  <h1><%= @product.name %></h1>

  <% admins_only do  %>
  <ul class="actions">
    <li>
      <%= link_to 'Edit Product',
      edit_admin_product_path(@product), class: "edit" %>
    </li>
    <li>
      <%= link_to'Delete Product',
      admin_product_path(@product),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this product?"},
      class: "delete" %>
    </li>
  </ul>
  <% end %>
</header>

<p><%= @product.description %></p>
<p><%= @product.price %></p>
